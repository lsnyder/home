#!/bin/sh
if [[ ! $USER == root ]]
then
    sudo $0
    exit 0
fi

if [[ ! -e /usr/lib/libruby1.8.so.1.8.7.backup ]]
then
    mv /usr/lib/libruby1.8.so.1.8.7 /usr/lib/libruby1.8.so.1.8.7.backup
else
    rm /usr/lib/libruby1.8.so.1.8.7
fi
ln -s -f /usr/local/lib/libruby.so.1.8.7 /usr/lib/libruby1.8.so.1.8.7
